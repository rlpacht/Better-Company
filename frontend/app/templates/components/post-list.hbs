{{yield}}
<div class="post-list">
  {{#each posts as |post|}}
    {{post-tile
      post=post
    }}
  {{/each}} 

  {{!-- {{infinite-scroll-container infiniteModelName='post'}} --}}
</div>
  {{#if isCreatingPost}}
    {{#modal-dialog 
      translucentOverlay=true}}
      <div>
        {{textarea
          value=newPostText
          action="savePost"
        }}
      </div>
      <button {{action "savePost"}}>Post</button>
    {{/modal-dialog}}
  {{else}}
    <img class="create-post" src="assets/images/btn_compose.png" {{action "createPost"}}>
  {{/if}}  
