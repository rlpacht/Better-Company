<div class="login-form form-horizontal input-group-lg">
  <div class="login-inputs">
    <%= form_for @user, url: "/sessions", method: :post, class: "input-group form-group" do |f| %>
      <div class="email-field login" >
          <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="password-field">
        <%= f.password_field :password, placeholder: "Password", class: "form-control login" %>
      </div>
      <%= f.submit "Log in", class: "login-submit btn login" %>
    <% end %>
  </div>
</div>